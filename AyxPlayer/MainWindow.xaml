<Window x:Class="AyxPlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:con="clr-namespace:AyxWaveForm;assembly=AyxWaveForm"
        xmlns:local="clr-namespace:AyxPlayer" WindowStartupLocation="CenterScreen"
        mc:Ignorable="d"
        Title="MainWindow" Height="317" Width="839">
    <DockPanel>
        <ToolBar DockPanel.Dock="Top" Background="Transparent" ToolBarTray.IsLocked="True">
            <Button Content="Open" Padding="5,2,5,2" Click="Button_Click"/>
        </ToolBar>
        <DockPanel DockPanel.Dock="Bottom"></DockPanel>
        <TextBox DockPanel.Dock="Right" x:Name="InfoText" Width="200"/>
        <con:WaveForm x:Name="MyWaveForm"/>
    </DockPanel>
</Window>
